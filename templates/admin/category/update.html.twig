{% extends 'base.html.twig' %}

{% block title %}Modification d'un catégorie !{% endblock %}

{% block body %}
<main class="admin">
    {% include "admin/partials/_nav.html.twig" %}
    <i class="las la-caret-square-right la-2x admin__open" id="admin-open"></i>
    <section class="admin__contents">
        <h1 class="admin__contents__title">Modifier une catégorie</h1>
        <section class="admin__content__form">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" value="Valider" class="admin__content__form__button">
            {{ form_end(form) }}
        </section>
    </section>
</main>
{% endblock %}
