{% extends 'base.html.twig' %}

{% block title %}Tableau de bord administration !{% endblock %}

{% block body %}
<main class="admin">
    {% include "admin/partials/_nav.html.twig" %}
    <i class="las la-caret-square-right la-lg admin__open" id="admin-open"></i>
    <section class="admin__contents">
        <h1>Tableau de bord</h1>
        <ul>
            <p>Il y a {{ app.user.profile|length }} d'utilisateurs inscrits.</p>
            <p>Il y a {{ announcesOnline|length }} annonce{{ announcesOnline|length <= 1 ? '' : 's' }} en ligne{{ announcesOnline|length <= 1 ? '' : 's' }}</p>
            <p>Il y a {{ announcesWait|length }} annonce{{ announcesWait|length <= 1 ? '' : 's' }} en attente{{ announcesWait|length <= 1 ? '' : 's' }}</p>
        </ul>
    </section>
</main>
{% endblock %}
