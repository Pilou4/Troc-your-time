{% extends 'base.html.twig' %}

{% block title %}Liste des catégories !{% endblock %}

{% block body %}
<main class="admin">
    {% include "admin/partials/_nav.html.twig" %}
    <section class="admin__content">
        <h1 class="admin__content__title">>Liste des régions</h1>
        <button><a href="{{ path('admin_region_add') }}">Ajouter une régions</a></button>
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Nombre de departements</th>
                </tr>
            </thead>
            <tbody>
                {% for region in regions %}
                    <tr>
                        <td>{{ region.name }}</td>
                        <td>{{ region.departments|length }}</td>
                        <td>
                            <a href="{{ path('admin_region_update', {'id': region.id}) }}">
                                <i class="las la-edit la-2x"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('admin_region_delete', {'id': region.id}) }}"  onClick="return confirm('Confirmez la suppression');"><i class="las la-trash la-2x"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
</main>

{% endblock %}
