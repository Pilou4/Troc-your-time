{% extends 'base.html.twig' %}

{% block title %}Contact pour l'annonce {{ title }}{% endblock %}

{% block body %}
<main class="message">
    <div class="message__form">
        <h1 class="message__form__title">Contacte au sujet de l'annonce {{ title }}</h1>        
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Valider" class="message__form__button">
        {{ form_end(form) }}
    </div>
</main>
{% endblock %}
