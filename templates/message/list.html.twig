{% extends 'base.html.twig' %}

{% block title %}Messagerie !{% endblock %}

{% block body %}
    <main class="message">
        <nav class="message__nav">
            <a href="{{ path('message_list') }}" class="message__nav__link">Accueil</a>
            <a href="{{ path('message_received') }}" class="message__nav__link">Messages reçus ({{ app.user.profile.received|length }})</a>
            <a href="{{ path('message_sent') }}" class="message__nav__link">Messages Envoyés ({{ app.user.profile.sent|length }})</a>
            <a href="{{ path('message_basket') }}" class="message__nav__link">Corbeille</a>
        </nav>
        <section class="message__contents">
            <h1 class="message__title">Messagerie</h1>
            <p>Résume de la messagerie</p>
            <p>Reçus: {{ app.user.profile.received|length }}</p>
            <p>Envoyés: {{ app.user.profile.sent|length }}</p>
            <button class="message__button">Voirs mes dossiers</button>
            <button class="message__button"><a href="{{ path('message_send') }}" class="message__button__link">Envoyé un message</a></button>
        </section>
    </main>
{% endblock %}
