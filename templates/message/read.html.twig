{% extends 'base.html.twig' %}

{% block title %}Message de {{ app.user.profile.username }} !{% endblock %}

{% block body %}
    <main class="message">
    {% include "message/partials/_nav.html.twig" %}
        <i class="las la-caret-square-right la-lg message__open" id="message-open"></i>
        <section class="message__contents">    
            <h1 class="message__contents__title">Messagerie de {{ app.user.profile.username }}</h1>
            <div class="message__content">
                <h2 class="message__content__title">{{ message.title }}</h2>
                <p class="message__content__received">Message de {{ message.sender.username }}</p>
                <p class="message__content__sent">Le {{ message.createdAt|date }}</p>
                <p>{{ message.message }}</p>
                <button class="message__content__button">Supprimer</button>
