{% extends 'base.html.twig' %}

{% block title %}Page de connection !{% endblock %}

{% block body %}
<main class="login">
    <form method="post" class="login__form">
        {% if error %}
            <div class="login__form__error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="login__form__top">
            <h1 class="login__form__top__title">Bonjour !</h1>
            <p class="login__form__top__text">Connectez-vous pour découvrir toutes nos fonctionnalités.</p>
        </div>
        <label class="login__form__label" for="inputEmail">Email</label>
        <input class="login__form__input" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label class="login__form__label" for="inputPassword">Password</label>
        <input class="login__form__input" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        

        <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
        >

            {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox mb-3">
            <p class="login__form__forgotten"><a href="{{ path('forgotten_password') }}" class="login__form__link">mot de passe oublié</a></p>
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>

        <button class="login__form__button" type="submit">
            Se connecter
        </button>

        <div class="login__form__bottom">
            <p class="login__form__bottom__text">
                Envie de nous rejoindre ?
                <a href="{{ path('create_account') }}" class="login__form__bottom__link">Créer un compte</a>
            </p>
        </div>

    </form>
</main>
{% endblock %}
