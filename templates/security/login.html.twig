{% extends 'base.html.twig' %}

{% block title %}Page de connection !{% endblock %}

{% block body %}
<main class="login">
    <form method="post">
        {% if error %}
            <div class="login__form__error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1>Bonjour !</h1>
        <p>Connectez-vous pour découvrir toutes nos fonctionnalités.</p>

        {# <label class="login__form__label" for="inputEmail">Email</label> #}
        <input placeholder="Email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        {# <label class="login__form__label" for="inputPassword">Password</label> #}
        <input placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        

        <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
        >
        <a href="{{ path('forgotten_password') }}">mot de passe oublié</a>
        <label>
            <input type="checkbox" name="_remember_me"> Se souvenir de moi
        </label>
            {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html #}

        {# <div class="checkbox mb-3"> #}
            {# <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label> #}
        {# </div> #}

        <input type="submit" value="se connecter">
        <p>
            Envie de nous rejoindre ?
            <a href="{{ path('create_account') }}">Créer un compte</a>
        </p>

    </form>
</main>
{% endblock %}
